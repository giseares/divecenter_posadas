          <%when "Salida Grupal a Malpelo" %>
            <img src=<%= asset_url('malpelo.jpg') %> >
          <%when "Salida Grupal a Bonaire"  %>
            <img src=<%= asset_url('BONAIRE.jpg') %> >
        <% end  %>
        <div class="card-trip-infos">
          <div>
            <h2><%=activity.name_activity %></h2>
            <p><%=activity.description%></p>
          </div>
          <h2 class="card-trip-pricing">USD<%=activity.price%></h2>
        </div>
      </div>
    <%# end %>
  <% end %>
</div>
