<!-- AGENCIAS -->
<h2 class="my-4 text-center">Conoce las agencias con las que trabjamos</h2>
<div class="container">
  <div class="cards">
    <% @agencies.each do |agency|%>
      <% if agency.name != 'SAL'%>
        <%= link_to agency_path(agency), class:"text-decoration-none text-dark d-flex" do %> 
          <div class="card">
            <%case agency.name %>
              <%when "SDI" %>
                <img src=<%= asset_url('SDI.png') %> id="img-home">
              <%when "TDI"  %>
                <img src=<%= asset_url('TDI.png') %> id="img-home">
              <%when "ERDI"  %>
                <img src=<%= asset_url('ERDI.png') %>  id="img-home">
              <%else  %>
                <img src=<%= asset_url('FRI.png') %>  id="img-home">
            <% end  %>
            <h3> <%=agency.name%> </h3>
            <p> <%=agency.information%> </p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
 <!-- Salidas -->
<h2 class="my-4 text-center">Proximas salidas grupales</h2>
<div class="container">
